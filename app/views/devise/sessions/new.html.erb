<%= render partial: "posts/header" %>
<div class = "container">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label "ニックネーム",:class => "field-label" %><br />
    <%= f.text_field :username, autofocus: true,:class =>'field-frame' %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス",:class => "field-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:class =>'field-frame' %>
  </div>

  <div class="field">
    <%= f.label "パスワード",:class => "field-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password",:class =>'field-frame' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field-check">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in",:class => "log-in-btn" %>
  </div>
<% end %>
</div>
<div class= "other">
<%= render "devise/shared/links" %>
</div>
